<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/getImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/location1"
        android:layout_below="@+id/getImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Location:"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/getLocation"
        android:layout_toRightOf="@+id/location1"
        android:layout_below="@+id/getImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Location here"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/address1"
        android:layout_below="@+id/location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Address:"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/getAddress"
        android:layout_toRightOf="@+id/address1"
        android:layout_below="@+id/getLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Address here"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/contact1"
        android:layout_below="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Contact:"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/getContact"
        android:layout_toRightOf="@+id/address1"
        android:layout_below="@+id/getAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Contact here"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/rate1"
        android:layout_below="@+id/contact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Rate:"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/getRate"
        android:layout_toRightOf="@+id/rate1"
        android:layout_below="@+id/getContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Rate here"
        android:textSize="22sp" />

</RelativeLayout>